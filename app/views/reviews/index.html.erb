<p id="notice"><%= notice %></p>

<h1>Listing Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Rate</th>
      <th>Content</th>
      <th>Company</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @company.reviews.each do |review| %>
      <tr>
        <td><%= review.rate %></td>
        <td><%= review.content %></td>
        <td><%= review.company_id %></td>
        <td><%= review.user_id %></td>
        <td><%= link_to 'Show', company_reviews_path %></td>
        <td><%= link_to 'Edit', '#' %></td>
        <td><%= link_to 'Destroy', company_review_path(@company), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
